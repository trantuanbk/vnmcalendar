<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:id="@+id/dayWidget"
	a:orientation="vertical"
	a:layout_width="160sp"
	a:layout_height="200sp"		
	a:layout_gravity="center"
	a:background="@drawable/day_widget_bg">	
	<TextView a:id="@+id/dayOfMonthText"
		a:layout_width="fill_parent" 
		a:layout_height="wrap_content" 
		a:text="29"
		a:textColor="@color/dayColor"
		a:gravity="center"
		a:textSize="80sp"
		a:textStyle="bold" 
		a:layout_weight="1"/>
    <TextView a:id="@+id/dayOfWeekText"
        a:layout_width="fill_parent" 
        a:layout_height="wrap_content"
        a:text="Thứ tư"
        a:textColor="@color/dayColor"
        a:gravity="center"
        a:textSize="20sp"
        a:paddingBottom="5sp"
        a:layout_marginRight="2sp"/>
        
    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="fill_parent" 
        a:layout_height="wrap_content"
        a:layout_marginBottom="1sp"
        a:layout_marginRight="2sp">            
        <TextView
            a:layout_width="fill_parent" 
            a:layout_height="fill_parent"
            a:layout_weight="1"
            a:padding="2px"
            a:text="Ngày"
            a:gravity="center" 
            a:textSize="13sp"
            a:background="@drawable/lighter_section_bg"/>
        <TextView
            a:layout_width="fill_parent" 
            a:layout_height="fill_parent"
            a:layout_weight="1"
            a:padding="2px"
            a:text="Tháng"
            a:gravity="center"
            a:textSize="13sp"
            a:background="@drawable/lighter_section_bg"
            a:layout_marginLeft="1sp"/>            
    </LinearLayout>
    
    <LinearLayout
        a:orientation="horizontal"
        a:layout_width="fill_parent" 
        a:layout_height="wrap_content"
        a:layout_marginRight="2sp"
        a:layout_marginBottom="2sp">          
        <LinearLayout
            a:orientation="vertical"
            a:layout_width="fill_parent"
            a:layout_height="fill_parent"
            a:layout_weight="1"
            a:gravity="center"
            a:background="@drawable/section_bg">
            <TextView 
                a:id="@+id/vnmDayOfMonthText" 
                a:layout_width="fill_parent" 
                a:layout_height="20sp"
                a:layout_marginBottom="5sp"
                a:text="23"
                a:textColor="@color/dayColor"
                a:gravity="center" 
                a:textSize="18sp"/>
            <TextView 
                a:id="@+id/vnmDayOfMonthInText" 
                a:layout_width="70sp" 
                a:layout_height="wrap_content" 
                a:text="Quý hợi"
                a:textColor="@color/dayColor"
                a:gravity="center" 
                a:textSize="13sp"
                a:paddingBottom="5sp"/>
        </LinearLayout>
        <LinearLayout
            a:orientation="vertical"
            a:layout_width="fill_parent"
            a:layout_height="fill_parent"
            a:layout_weight="1"
            a:gravity="center"
            a:background="@drawable/section_bg"
            a:layout_marginLeft="1sp">      
            <TextView 
                a:id="@+id/vnmMonthText" 
                a:layout_width="fill_parent" 
                a:layout_height="20sp"
                a:layout_marginBottom="5sp"
                a:text="12"
                a:textColor="@color/dayColor"
                a:gravity="center" 
                a:textSize="18sp"/>
            <TextView 
                a:id="@+id/vnmMonthInText" 
                a:layout_width="70sp" 
                a:layout_height="wrap_content" 
                a:text="Ất sửu"
                a:textColor="@color/dayColor"
                a:gravity="center" 
                a:textSize="13sp"                
                a:paddingBottom="5sp"/>
        </LinearLayout>            
    </LinearLayout>   		
</LinearLayout>